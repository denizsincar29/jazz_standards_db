# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=jazz
DB_PASSWORD=jazz
DB_NAME=jazz

# Server Configuration
PORT=8000

# External Ports (for docker-compose)
# The port on your host machine that will map to the container
EXTERNAL_PORT=8000
# Database external port (if you need to access PostgreSQL from host)
DB_EXTERNAL_PORT=5432

# Base Path (for reverse proxy subpath deployment)
# Leave empty for root path deployment
# Set to /jazzdb for subpath deployment at yourdomain.com/jazzdb
BASE_PATH=

# Security
JWT_SECRET=change-me-in-production

# Environment (development/production)
ENVIRONMENT=development
